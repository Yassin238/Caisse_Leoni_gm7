    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Caisse_Leoni_gm7"
    Shell.FlyoutBehavior="Disabled"
    Title="Caisse_Leoni_gm7">

    <ShellItem Title="Home">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </ShellItem>
    <ShellItem Title="Depenses">
        <ShellContent ContentTemplate="{DataTemplate local:Views.AddDepensePage}" />
    </ShellItem>
    <ShellItem Title="Alimentation">
