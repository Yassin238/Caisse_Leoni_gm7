<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Caisse_Leoni_gm7.Views.FirstLogin"
             Title="FirstLogin">
    <StackLayout Padding="10">
        <Label Text="Confirm Phone Number" />
        <Entry x:Name="PhoneNumberEntry" Placeholder="Enter your phone number" Keyboard="Telephone" />
        <Button Text="Send Verification Code" Clicked="OnSendVerificationCodeClicked" />

        <Label Text="Enter Verification Code" />
        <Entry x:Name="VerificationCodeEntry" Placeholder="Enter code" Keyboard="Numeric" />

        <Button Text="Verify" Clicked="OnVerifyClicked" />
    </StackLayout>
</ContentPage>